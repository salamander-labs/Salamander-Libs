<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/met_mandatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#f00"
        app:layout_constraintBaseline_toBaselineOf="@+id/met_caption"
        app:layout_constraintEnd_toStartOf="@+id/met_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/met_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/met_mandatory"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/met_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/met_caption" />
</android.support.constraint.ConstraintLayout>